(defnew [_width _height &opt :String letter]
    [:Int width _width
        :Int height _height
        :Array<String> rows (for _ (range height) (* (or letter " ") width))])

(method getChar [x y]
    (.charAt (nth rows y) x))

(method setChar [x y char]
    (let [row (nth rows y)
            left (row.substr 0 x)
            right (row.substr (+ x 1))]
        (setNth rows y "${left}${char}${right}")))
